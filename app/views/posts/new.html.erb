<h2>Create a Post</h2>
<%= form_tag posts_path, method: "post" do %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
        <%= @post.errors.full_messages.each do |post| %>
          <li><%= message %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field<%= ' field_with_errors' if @post.errors[:title].any? %>">
      <%= label_tag('post[title]', "Title") %>
      <%= text_field_tag :'post[title]', @post.title %>
    </div>

    <div class="field<%= ' field_with_errors' if @post.errors[:content].any? %>">
      <%= label_tag('post[content]', "Content") %>
      <%= text_field_tag :'post[content]', @post.content %>
    </div>

    <div class="field<%= ' field_with_errors' if @post.errors[:category].any? %>">
      <%= label_tag('post[category]', "Category") %>
      <%= text_field_tag :'post[category]', @post.category %>
    </div>

    <%= submit_tag "Create" %>
<% end %>
